<%- include('partials/header') %>
<link rel="stylesheet" href="/css/auth.css" />

<div class="auth-page">
  <div class="auth-wrapper">
    <h1>Quên mật khẩu</h1>
    <p>Nhập tên đăng nhập, chúng tôi sẽ gửi mật khẩu tạm vào email của bạn.</p>

    <% if (success_msg && success_msg.length) { %>
    <div class="alert alert-success rounded-3 d-flex align-items-center mb-3">
      <i class="fas fa-check-circle me-2"></i><%= success_msg %>
    </div>
    <% } %> <% if (error_msg && error_msg.length) { %>
    <div class="alert alert-danger rounded-3 d-flex align-items-center mb-3">
      <i class="fas fa-exclamation-triangle me-2"></i><%= error_msg %>
    </div>
    <% } %>

    <form method="POST" action="/forgot" novalidate>
      <div class="input-box">
        <input
          type="text"
          name="username"
          placeholder="Tên đăng nhập"
          required
        />
        <i class="fas fa-user"></i>
      </div>

      <button type="submit" class="btn-submit">Gửi mật khẩu tạm</button>

      <div class="register-link">
        <p>
          Đã nhớ mật khẩu?
          <a href="/login">Đăng nhập</a>
        </p>
      </div>
    </form>
  </div>
</div>

<script>
  // optional
</script>
