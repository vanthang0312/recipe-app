<%- include('./partials/header') %>

<div class="admin-hero mb-4">
  <div>
    <p class="text-light mb-1">Admin / Quản lý bài viết</p>
    <h1 class="text-white fw-bold">Chỉnh sửa bài</h1>
    <p class="text-light mb-0">Cập nhật nội dung hoặc trạng thái bài viết.</p>
  </div>
</div>

<div class="card border-0 shadow-lg rounded-4">
  <div class="card-body p-4">
    <form method="POST" action="/admin/posts/<%= recipe.id %>/edit">
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label fw-semibold">Tiêu đề</label>
          <input
            type="text"
            name="title"
            class="form-control"
            required
            value="<%= recipe.title %>"
          />
        </div>
        <div class="col-md-6">
          <label class="form-label fw-semibold">Trạng thái</label>
          <select name="status" class="form-select">
            <option value="pending" <%= recipe.status === 'pending' ? 'selected' : '' %>>Chờ duyệt</option>
            <option value="approved" <%= recipe.status === 'approved' ? 'selected' : '' %>>Đã duyệt</option>
            <option value="rejected" <%= recipe.status === 'rejected' ? 'selected' : '' %>>Đã từ chối</option>
          </select>
        </div>
        <div class="col-12">
          <label class="form-label fw-semibold">Mô tả</label>
          <textarea name="description" class="form-control" rows="3"><%= recipe.description || '' %></textarea>
        </div>
        <div class="col-12">
          <label class="form-label fw-semibold">Video (YouTube/Vimeo)</label>
          <input
            type="url"
            name="video"
            class="form-control"
            value="<%= recipe.video || '' %>"
            placeholder="https://www.youtube.com/watch?v=abc123"
          />
        </div>
        <div class="col-12">
          <label class="form-label fw-semibold">Nguyên liệu</label>
          <textarea name="ingredients" class="form-control" rows="6" required><%= recipe.ingredients %></textarea>
        </div>
        <div class="col-12">
          <label class="form-label fw-semibold">Cách làm</label>
          <textarea name="instructions" class="form-control" rows="10" required><%= recipe.instructions %></textarea>
        </div>
      </div>
      <div class="text-end mt-4">
        <a href="/admin/posts" class="btn btn-outline-secondary rounded-pill px-4">Hủy</a>
        <button type="submit" class="btn btn-danger rounded-pill px-4 ms-2">
          <i class="fas fa-save me-1"></i>Lưu
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>
